<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cut_card_background"
    android:orientation="vertical"
    tools:context=".activities.Signin.SigninJobSeekerSignup">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="Sign up"
        android:textColor="@color/mainblue"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutSeekerEmailSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        app:startIconDrawable="@drawable/ic_email"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="130dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/textView2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/seekerEmailSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutSeekerPasswordSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        app:startIconDrawable="@drawable/ic_password"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="130dp"
        app:passwordToggleEnabled="true"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutSeekerEmailSignup">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/seekerPassSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutSeekerConfirmSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        app:startIconDrawable="@drawable/ic_password"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="130dp"
        app:passwordToggleEnabled="true"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutSeekerPasswordSignup">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/seekerConfirmSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Confirm" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/JobSeekerSignUpBtn"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="130dp"
        android:background="#638bf2"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutSeekerConfirmSignup" />


</androidx.constraintlayout.widget.ConstraintLayout>