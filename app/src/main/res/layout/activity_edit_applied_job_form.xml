<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.JobSeeker.JobSeekerEditAppliedJobForm">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="Edit Applied Job"
        android:textColor="@color/mainblue"
        android:textSize="@dimen/Title"
        android:textStyle="bold"/>

    <GridLayout
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:columnCount="2"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardJobSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/applyJobName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="14"
                    android:text="Enter Name"
                    android:textSize="@dimen/formTxt"/>
                <EditText
                    android:id="@+id/applyAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="14"
                    android:text="Enter Age"
                    android:textSize="@dimen/formTxt"/>
                <EditText
                    android:id="@+id/applyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="14"
                    android:text="Enter Address"
                    android:textSize="@dimen/formTxt"/>
                <EditText
                    android:id="@+id/applyMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="14"
                    android:text="Enter Mobile Number"
                    android:textSize="@dimen/formTxt"/>
                <EditText
                    android:id="@+id/applyEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="14"
                    android:text="Enter Email"
                    android:textSize="@dimen/formTxt"/>
                <EditText
                    android:id="@+id/applyJobID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:ems="14"
                    android:textSize="@dimen/formTxt"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical |center_horizontal"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="40dp">

                    <Button
                        android:id="@+id/savebtnedtaplyjob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/Green"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="@dimen/buttonSize" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</RelativeLayout>