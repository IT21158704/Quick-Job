<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cut_card_background"
        tools:context=".activities.Reviews.ReviewEditReview"
        tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Edit Review"
        android:textColor="@color/mainblue"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editreview_name"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="25dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="#F6F3F3"
        android:drawableLeft="@drawable/person"
        android:drawablePadding="5dp"
        android:hint="Customer Profile Name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/editReviewSave"
        android:layout_width="118dp"
        android:layout_height="53dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="147dp"
        android:backgroundTint="@color/Green"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="@dimen/formTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editreview_comment"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editreview_comment"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="25dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="#F6F3F3"
        android:drawableLeft="@android:drawable/stat_notify_chat"
        android:drawablePadding="20dp"
        android:drawableTint="#1C1B1B"
        android:hint="Write here"
        android:textAlignment="viewStart"
        android:textSize="@dimen/formTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editreview_name" />

    <EditText
        android:id="@+id/editreview_Id"
        android:layout_width="116dp"
        android:layout_height="12dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#F6F3F3"
        android:drawablePadding="20dp"
        android:drawableTint="#1C1B1B"
        android:hint=""
        android:textAlignment="viewStart"
        android:textSize="@dimen/formTxt"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editreview_name" />


</androidx.constraintlayout.widget.ConstraintLayout>